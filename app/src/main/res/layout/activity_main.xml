<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.android.myappportfolio.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        ></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/my_nanodegree_apps"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/popular_movies"
            android:background="#2E3D49"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:padding="15sp"
            android:layout_marginTop="8dp"
            android:onClick="popMvoies"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stock_hawk"
            android:background="#2E3D49"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:padding="15sp"
            android:layout_marginTop="8dp"
            android:onClick="stockHawk"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/build_it_bigger"
            android:background="#2E3D49"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:padding="15dp"
            android:layout_marginTop="8dp"
            android:onClick="buildItBigger"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/make_your_app_material"
            android:background="#2E3D49"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:padding="15sp"
            android:layout_marginTop="8dp"
            android:onClick="makeYourAppMaterial"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/go_ubiquitous"
            android:background="#2E3D49"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:padding="15sp"
            android:layout_marginTop="8dp"
            android:onClick="goUbiquitous"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/capstone"
            android:background="#2E3D49"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:padding="15dp"
            android:layout_marginTop="8dp"
            android:onClick="capstone"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        ></LinearLayout>
</LinearLayout>
